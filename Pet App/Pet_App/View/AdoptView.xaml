<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pet_App.View.AdoptView">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding AnimalView}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  HasUnevenRows="True" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Image Source="http://fotologimg.s3.amazonaws.com/photo/27/7/58/cocho_42/1209148340_f.jpg"/>
                                <Label Text="{Binding Name}"/>
                                <Label Text="{Binding Age}"/>
                                <Label Text="{Binding Location.City}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>